# Cortinillas_IA Environment Configuration Template
# Copy this file to .env and update the values

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Deepgram API Key (REQUIRED)
# Get your API key from: https://console.deepgram.com/
# This is required for speech-to-text processing
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# =============================================================================
# DIRECTORY CONFIGURATION (Optional)
# =============================================================================

# Override default directories if needed
# All paths are relative to the project root
# CONFIG_DIR=config
# DATA_DIR=data
# TEMP_DIR=temp
# LOG_DIR=logs

# =============================================================================
# LOGGING CONFIGURATION (Optional)
# =============================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR
# DEBUG: Very detailed logs (use for troubleshooting)
# INFO: General information (recommended for production)
# WARNING: Only warnings and errors
# ERROR: Only errors
LOG_LEVEL=INFO

# Log file rotation (days to keep log files)
# LOG_RETENTION_DAYS=30

# =============================================================================
# TV API CONFIGURATION (Optional)
# =============================================================================

# TV API base URL (override default from channel configs)
# TV_API_BASE_URL=http://172.16.3.20

# API retry configuration
# TV_API_MAX_RETRIES=3
# TV_API_SLEEP_SECONDS=30
# TV_API_TIMEOUT_SECONDS=300

# =============================================================================
# PROCESSING CONFIGURATION (Optional)
# =============================================================================

# Overlap detection similarity threshold (0.0 to 1.0)
# Higher values = more strict overlap detection
# OVERLAP_SIMILARITY_THRESHOLD=0.8

# Maximum expected audio duration in minutes
# Used for validation and timeout purposes
# MAX_AUDIO_DURATION_MINUTES=65

# Minimum audio duration in seconds for processing
# Audio shorter than this will be skipped
# MIN_AUDIO_DURATION_SECONDS=30

# =============================================================================
# DEEPGRAM CONFIGURATION (Optional)
# =============================================================================

# Override Deepgram settings from channel configs
# DEEPGRAM_MODEL=nova-3
# DEEPGRAM_LANGUAGE=multi
# DEEPGRAM_SMART_FORMAT=true

# Deepgram API timeout in seconds
# DEEPGRAM_TIMEOUT_SECONDS=600

# =============================================================================
# PERFORMANCE CONFIGURATION (Optional)
# =============================================================================

# Enable concurrent processing of channels (true/false)
# ENABLE_CONCURRENT_PROCESSING=false

# Maximum number of concurrent processes
# MAX_CONCURRENT_PROCESSES=2

# Memory limit for audio processing (MB)
# MAX_MEMORY_USAGE_MB=1024

# =============================================================================
# DEVELOPMENT/TESTING (Optional)
# =============================================================================

# Enable development mode (more verbose logging, keep temp files)
# DEVELOPMENT_MODE=false

# Skip actual API calls (for testing)
# DRY_RUN=false

# Use mock data for testing
# USE_MOCK_DATA=false

# Test data directory
# TEST_DATA_DIR=tests/data

# =============================================================================
# NOTIFICATION CONFIGURATION (Optional)
# =============================================================================

# Email notifications for errors (requires SMTP configuration)
# ENABLE_EMAIL_NOTIFICATIONS=false
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# NOTIFICATION_RECIPIENTS=admin@yourcompany.com

# Webhook URL for notifications
# WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# =============================================================================
# SECURITY CONFIGURATION (Optional)
# =============================================================================

# Enable SSL verification for API calls
# VERIFY_SSL=true

# API request timeout in seconds
# REQUEST_TIMEOUT=30

# Maximum file size for processing (MB)
# MAX_FILE_SIZE_MB=500

# =============================================================================
# TIMEZONE CONFIGURATION (Optional)
# =============================================================================

# Override default timezone (America/Bogota)
# TIMEZONE=America/Bogota

# Date format for reports and logs
# DATE_FORMAT=%Y-%m-%d %H:%M:%S

# =============================================================================
# BACKUP CONFIGURATION (Optional)
# =============================================================================

# Enable automatic backup of results
# ENABLE_BACKUP=false

# Backup directory
# BACKUP_DIR=backups

# Number of backup copies to keep
# BACKUP_RETENTION_COUNT=7

# =============================================================================
# EXAMPLE CONFIGURATIONS
# =============================================================================

# Example for development environment:
# LOG_LEVEL=DEBUG
# DEVELOPMENT_MODE=true
# DRY_RUN=false
# VERIFY_SSL=false

# Example for production environment:
# LOG_LEVEL=INFO
# ENABLE_EMAIL_NOTIFICATIONS=true
# ENABLE_BACKUP=true
# VERIFY_SSL=true

# Example for testing environment:
# LOG_LEVEL=DEBUG
# USE_MOCK_DATA=true
# DRY_RUN=true
# DEVELOPMENT_MODE=true